{
    "seed": 42,

    "m2_data": "../../data/geccc/dev/sorted_sentence.m2",
    "max_length": 128,
    "batch_size": 32,

    "model": "../utils/transformer/model/",
    "tokenizer": "../utils/transformer/model/",
    "from_config": true,
    
    "optimizer":{
        "name": "Adam",
        "params":{
            "lr": 0.001
        }
    },

    "loss": "SCC",
    
    "model_checkpoint_path": "tmp/checkpoint/",

    "max_unchanged_words": 2,
    "beta": 0.5,
    "ignore_whitespace_casing": false,
    "verbose": false,
    "very_verbose": false
}