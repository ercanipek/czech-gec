{
    "seed": 42,

    "data_paths": ["../../data/tokenized/news-2018-cs-tokenized.txt"],
    "num_parallel": 12,
    "max_length": 128,
    "shuffle_buffer": 1000,
    "bucket_boundaries": [32, 64, 96],
    "bucket_batch_sizes_per_gpu": [28, 20, 8, 4],

    "model": "google/mt5-base",
    "tokenizer": "google/mt5-base",
    "from_config": false,
    "steps_per_epoch": 96000,
    "epochs": 100000,
    "use_f16": false,
    
    "optimizer":{
        "name": "Adafactor",
        "params":{
            "learning_rate": 0.0005
        }
    },

    "loss": "SCC",

    "lang": "cs",
    "token_file": "../../data/vocabluraries/vocabulary_cs.tsv",
    "token_err_distribution": [0.7, 0.1, 0.1, 0.1, 0],
    "char_err_distribution": [0.25, 0.25, 0.25, 0.25, 0],
    "token_err_prob": 0.15,   
    "char_err_prob": 0.02,

    
    "log_file": "./tmp/logs",
    "profile_batch": [2000, 2500],
    "model_checkpoint_path": "./tmp/checkpoint/",
    "backup_dir": "./tmp/backup",



    "m2_data": "../../data/akces-gec/dev/dev.all.m2",
    "batch_size": 16,    

    "max_unchanged_words": 2,
    "beta": 0.5,
    "ignore_whitespace_casing": false,
    "verbose": false,
    "very_verbose": false,

    "max_eval_length": 384,

    "timeout":  324000
}